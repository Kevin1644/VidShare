<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.media.MediaView?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.vidshare.vidshare.ExplorePageController">
    <children>
        <MediaView fx:id="mediaView" fitHeight="300.0" fitWidth="350.0" layoutX="125.0" layoutY="64.0" />
        <MenuBar layoutY="2.0" prefHeight="26.0" prefWidth="600.0">
            <menus>
                <Menu mnemonicParsing="false" text="Legal">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Copyright" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Terms of Service">
                    <items>
                        <MenuItem mnemonicParsing="false" text="ToS" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="How To Use" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="My Profile">
                    <items>
                        <MenuItem fx:id="credentialsButton" mnemonicParsing="false" onAction="#goToCredentials" text="Change Credentials" />
                        <MenuItem fx:id="followersButton" mnemonicParsing="false" onAction="#goToFollowers" text="View Followers" />
                        <MenuItem fx:id="followingButton" mnemonicParsing="false" onAction="#goToFollowing" text="View Following" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Log Out">
                    <items>
                        <MenuItem fx:id="logOutButton" mnemonicParsing="false" onAction="#logOut" text="Log Out" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <Button fx:id="likeButton" layoutX="14.0" layoutY="100.0" mnemonicParsing="false" prefHeight="211.0" prefWidth="80.0" text="LIKE" />
        <Button fx:id="dislikeButton" layoutX="506.0" layoutY="88.0" mnemonicParsing="false" prefHeight="211.0" prefWidth="80.0" text="DISLIKE" />
    </children>
</AnchorPane>